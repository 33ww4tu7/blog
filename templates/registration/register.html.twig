{% extends 'base.html.twig' %}
{% block body %}
    <!-- Navigation -->
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h1>Contact Me</h1>
                        <span class="subheading">Have questions? I have answers.</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <form method="post" enctype="multipart/form-data">
                    {{ form_errors(registrationForm) }}
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Name</label>
                            {{ form_widget(registrationForm.name) }}
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Surname</label>
                            {{ form_widget(registrationForm.surname) }}
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Email Address</label>
                            {{ form_widget(registrationForm.email) }}
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label class="btn btn-default btn-file">Image</label>
                            {{ form_widget(registrationForm.image) }}
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Password</label>
                            {{ form_widget(registrationForm.plainPassword) }}
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Is blogger</label>
                            {{ form_widget(registrationForm.isBlogger) }} I want become a blogere
                        </div>
                    </div>
                    <br>
                    <div class="control-group text-center">
                        <div class="form-group floating-label-form-group controls">
                            <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>
                        </div>
                    </div>
                    {{ form_widget(registrationForm._token) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}